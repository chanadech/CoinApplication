<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_layout"


    >

    <ImageView
        android:id="@+id/coinIcons"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginTop="17dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextCoinName"
        android:id="@+id/coinNames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="82dp"
        android:text="Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/coinIcons"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextDescription"
            android:id="@+id/coinDescriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="@id/coinNames"
            app:layout_constraintStart_toStartOf="@id/coinNames"
            app:layout_constraintTop_toBottomOf="@id/coinNames"
            android:text="Test" />

    </androidx.constraintlayout.widget.ConstraintLayout>

